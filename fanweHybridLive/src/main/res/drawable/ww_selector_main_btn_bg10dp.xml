<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/res_main_color"/>

            <stroke
                android:width="1dp"
                android:color="@color/res_main_color"/>

            <corners
                android:radius="10dp"/>
        </shape>

    </item>
    <item android:state_enabled="false">

        <shape>
            <solid android:color="#c0c0c0"/>

            <stroke
                android:width="1dp"
                android:color="#c0c0c0"/>

            <corners
                android:radius="10dp"/>
        </shape>

    </item>

</selector>