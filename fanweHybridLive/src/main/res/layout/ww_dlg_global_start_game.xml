<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/res_blur_m">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/res_layer_white_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/res.Text.Base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="马上就要到你咯"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_sec"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/layer_stroke_main_color_oval"
            android:gravity="center"
            android:textColor="@color/res_main_color"
            android:textSize="40sp"/>

        <TextView
            style="@style/res.Text.Base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="后开始抓娃娃"
            android:textColor="@color/res_text_gray_s"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:dividerPadding="10dp"
            android:divider="@drawable/lib_dialog_stroke"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/libDialog.Confirm.Text.Cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/lib_dialog_height_dialog_button"
                android:layout_weight="1"
                android:background="@drawable/lib_dialog_sel_bg_button_bottom_left"
                android:text="我放弃"/>

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/libDialog.Confirm.Text.Confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/lib_dialog_height_dialog_button"
                android:layout_weight="1"
                android:background="@drawable/lib_dialog_sel_bg_button_bottom_right"
                android:text="赶紧开始"
                android:textColor="@color/res_main_color"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>