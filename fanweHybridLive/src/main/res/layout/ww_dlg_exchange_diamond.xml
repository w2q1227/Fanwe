<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/res_blur_m">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/res_layer_white_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.fanwe.xianrou.widget.QKDiamondTextView
            style="@style/res.Text.Base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="兑换$"
            android:textColor="@color/res_text_gray_l"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="@color/res_text_gray_s"
            android:textSize="12sp"
            tools:text="确认使用1000积分兑换10钻石"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:divider="@drawable/lib_dialog_stroke"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/libDialog.Confirm.Text.Cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/lib_dialog_height_dialog_button"
                android:layout_weight="1"
                android:background="@drawable/lib_dialog_sel_bg_button_bottom_left"
                android:text="取消"
                android:textColor="@color/res_text_gray_l"/>

            <TextView
                android:id="@+id/tv_confirm"
                style="@style/libDialog.Confirm.Text.Confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/lib_dialog_height_dialog_button"
                android:layout_weight="1"
                android:background="@drawable/lib_dialog_sel_bg_button_bottom_right"
                android:text="确认"
                android:textColor="@color/res_main_color"/>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>