<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@android:color/transparent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwe.catchdoll.appview.WWTabMainMenuView
                android:id="@+id/view_tab_live"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwe.catchdoll.appview.WWTabMainMenuView
                android:id="@+id/view_tab_my_doll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_recharge"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ww_ic_tab_recharge"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>

            <TextView
                android:id="@+id/tv_tab_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:text="充值"
                android:textSize="9sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_mall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <com.fanwe.catchdoll.appview.WWTabMainMenuView
                android:id="@+id/view_tab_score_shop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwe.catchdoll.appview.WWTabMainMenuView
                android:id="@+id/view_tab_find"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwe.catchdoll.appview.WWTabMainMenuView
                android:id="@+id/view_tab_me"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stateListAnimator="@drawable/bm_selector_press_scale_out"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>