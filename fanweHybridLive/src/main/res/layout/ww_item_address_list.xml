<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="89dp"
    android:background="@color/res_bg_activity"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@drawable/ww_bg_white_rectangle_radius"
        android:paddingLeft="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="露娜"
                    android:maxEms="6"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/res_text_gray_l"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="13972852273"
                    android:maxLength="11"
                    android:textColor="@color/res_text_gray_s"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_set_default_address"
                    android:layout_width="35dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center|left"
                    android:src="@drawable/ww_ic_set_default_address"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <TextView
                android:id="@id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="广东省深圳市深南大道杭钢富春商务大厦"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/res_text_gray_s"
                android:textSize="12sp"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_edit"
            android:layout_width="55dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="15dp"
                android:src="@drawable/ww_ic_address_list"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_cb_checkbox"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/cb_checkbox"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center|right"
                android:src="@drawable/ww_checkbox_bg"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>