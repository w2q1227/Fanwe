<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/res_bg_activity"
    tools:context="com.fanwe.catchdoll.activity.WWRechargeResultActivity">

    <com.fanwe.catchdoll.view.WWCommonCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/iv_payment_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/bg_image_loading"
                tools:ignore="contentDescription" />

            <TextView
                android:id="@+id/tv_payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="加载中"
                android:textColor="@color/res_text_gray_s"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_payment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="加载中"
                android:textColor="@color/res_text_gray_l"
                android:textSize="25sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="30dp"
                android:background="@color/res_stroke" />

            <!-- 商品 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="商品"
                    android:textColor="@color/res_text_gray_l"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_goods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="加载中"
                    android:textColor="@color/res_text_gray_s"
                    android:textSize="12sp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/res_stroke" />

            <!-- 支付方式 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="支付方式"
                    android:textColor="@color/res_text_gray_l"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="加载中"
                    android:textColor="@color/res_text_gray_s"
                    android:textSize="12sp" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/res_stroke" />

            <!-- 支付时间 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="支付时间"
                    android:textColor="@color/res_text_gray_l"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_payment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:text="加载中"
                    android:textColor="@color/res_text_gray_s"
                    android:textSize="12sp" />
            </FrameLayout>

        </LinearLayout>

    </com.fanwe.catchdoll.view.WWCommonCardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp">

        <TextView
            android:id="@+id/tv_complete"
            style="@style/res.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/res_sel_main_color"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
