<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:contentPaddingLeft="7dp"
        app:contentPaddingRight="7dp"
        app:contentPaddingTop="5dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="163dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon"
                app:riv_corner_radius="8dp"
                tools:ignore="ContentDescription"/>

            <com.fanwe.catchdoll.view.CustomArtTextView
                android:id="@+id/tv_diamonds_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="13sp"
                tools:text="比卡丘比卡丘比卡丘比卡丘比卡丘"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_score_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/res_text_gray_s"
            android:textSize="12sp"
            tools:text="2500积分兑换"/>

        <TextView
            android:id="@+id/tv_number_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/res_text_gray_s"
            android:textSize="11sp"
            tools:text="剩余3个"/>

    </android.support.v7.widget.CardView>

</LinearLayout>